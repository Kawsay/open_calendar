<h2 class='text-white text-center mb-5'>Log in</h2>

<div class='mx-auto w-50 d-block'>
  <div class='d-flex justify-content-evenly align-items-center'>
    <%= image_tag 'login.svg', width: '50%', class: 'img-fluid mx-5' %>

    <%= form_for(resource, as: resource_name, data: { turbo: false }, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'text-white' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'text-white'  %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'text-white'  %>
        </div>
      <% end %>

      <div class="actions d-grid d-flex justify-content-end">
        <%= f.submit "Log in", class: 'btn btn-sm btn-primary' %>
      </div>
    <% end %>

  </div>

  <div class='d-flex justify-content-end'>
    <%= render "devise/shared/links" %>
  </div>

</div>
