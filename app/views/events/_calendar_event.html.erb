<%= link_to events_modal_path(event), remote: true, method: :get, data: { 'bs-togle': 'modal', 'bs-target': "#event_modal-#{event.id}" }, class: 'd-grid text-decoration-none' do %>
  <span class='badge bg-info text-<%= event.event_type.text_color %> d-inline-block  w-100 text-truncate' style='background-color: <%= event.event_type.background_color %> !important'>
    <%= event.title %>
  </span>
<% end %>
