// Append modal
//
// Get body
var body = document.getElementsByTagName('body')[0];
// Create a <div> Element to host our modal
var modal_div = document.createElement('div');
// Insert our modal partial into the <div> Element
modal_div.innerHTML = '<%= j render partial: "modal", locals:  { event: @event } %>'
// Append the div element to the body
body.append(modal_div)

// Show modal
//
// Instanciate a bootstrap Modal object
var modal = new bootstrap.Modal(
  document.getElementById('event_modal-<%= @event.id %>')
);
// Show the modal
modal.show();

