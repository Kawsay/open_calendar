<%= form_with(model: team, id: dom_id(team)) do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='d-flex align-items-center'>
    <div class='d-block'>
    <%= form.label t('team.name_label'), class: 'form-label' %>
    <%= form.text_field :name, placeholder: t('team.name_placeholder'), class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class='actions mt-1 d-grid'>
    <%= form.submit class: 'btn btn-outline-primary' %>
  </div>

<% end %>
