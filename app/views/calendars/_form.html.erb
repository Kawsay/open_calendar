<%= form_with(model: calendar, id: 'calendar-form') do |form| %>
  <% if calendar.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% calendar.errors.each do |error| %>
          <li class="text-white"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='d-flex align-items-center'>
    <div class="pe-1"> 
      <%= form.text_field :name, placeholder: 'Calendar name...', class: 'form-control form-control-sm text-white' %>
    </div>

    <div class="ms-auto px-0">
      <%= form.color_field :background_color, class: 'form-control-color form-control-sm p-0' %>
    </div>
  </div>

  <div class="actions mt-1 d-grid">
    <%= form.submit class: 'btn btn-outline-primary btn-sm' %>
  </div>
<% end %>
