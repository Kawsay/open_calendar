<%= turbo_stream.append 'calendar-sidebar' do %>
  <%= render partial: 'calendars/calendar_sidebar', locals: { calendar: @calendar } %>
<% end %>

<%= turbo_stream.replace 'new_calendar' do %>
  <%= render partial: 'calendars/form',
             locals: { new_calendar:  @new_calendar,
                       current_team:  @current_team } %>
<% end %>

<%= turbo_stream.replace 'new_event' do %>
  <%= render partial: 'events/form',
             locals: { new_event:     @new_event,
                       calendars:     @calendars,
                       organizations: @organizations } %>
<% end %>
