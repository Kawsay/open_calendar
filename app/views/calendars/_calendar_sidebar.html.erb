<div class='d-flex align-items-center calendar-sidebar-item'>
  <div class='d-flex me-1'>
    <span class='calendar-color-circle' style='background-color: <%= calendar.background_color %>;'></span>
  </div>

  <div class='mr-auto flex-grow-1'>
    <div class='text-white'
       data-calendars--visibility-target="calendar"
       data-calendar-name="<%= calendar.name %>"
       data-calendar-visible="true">
      <%= calendar.name %>
    </div>
  </div>

  <div class='ms-auto'>
    <%= link_to '#', data: { turbo: false } do %>
      <%= image_tag 'eye.svg',
        size: '15x15',
        data: {
          action: 'click->calendars--visibility#toggle',
          calendar_name: calendar.name
        },
        class: 'eye-icon' %>
    <% end %>
  </div>

  <div>
    <%= image_tag 'share.svg',
      size: '15x15',
      data: {
        bs_toggle: "calendar_#{calendar.id}_popover",
        bs_content: render(partial: 'calendars/calendar_share_popover_content', locals: { calendar_id: calendar.id, user_id: current_user.id }).html_safe,
        popover_target: 'htmlPopover'
     }
    %>
  </div>
</div>
