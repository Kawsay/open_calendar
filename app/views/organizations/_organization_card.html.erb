<div class='card mb-3 shadow'>
  <div class='card-body'>
    <div class='card-title'>
      <h3><%= link_to organization.fullname, organization_pat(organization) %></h3>
    </div>
    <div class='card-text'>
      <p><%= organization.description %></p>
      <p class='text-muted m-0'><%= organization.documents.size %> documents</p>
      <p class='text-muted m-0'><%= organization.events.size %> événements</p>

      <div class='d-md-flex justify-content-md-end'>
        <%= button_to 'Plus d\'info', organization_path(organization), method: :get, class: 'btn btn-outline-primary btn-sm' %>
      </div>
    </div>
  </div>
</div>
